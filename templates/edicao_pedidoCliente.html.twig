{% extends "base.html.twig" %}
{% block body %}
    <form class="form-horizontal-a" method="post" action="../pedido/editar_clientePedido.php"> 
        {{mensagem}}
        <input type="hidden" name="pedido_id" value="{{pdCliente.id}}"/>
        <h3>Modificar Dados</h3>
        <div class="form-group-a">
            {% for pdCliente in PedidoCliente %}
                <label  class="col-sm-2 control-label">Pedido</label>              
                <input name="pedido" type="text" class="form-control" maxlength="11" value="{{pdCliente.id}}" readonly/>
                <label  class="col-sm-2 control-label">Cliente</label> 
                <input name="cliente_antigo" type="text" class="form-control" maxlength="80" value="{{pdCliente.cliente_id}}" readonly/><br>
                <div class="form-group-a">
                    <label  class="col-sm-2 control-label">Novo Cliente</label>
                    <div class="col-sm-10-a">
                        <select name="cliente_id" id="cliente_id" >
                            {% for cliente in clientes %}    
                                <option value="{{cliente.id}}">{{cliente.nome}}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
            </div> 
        {% endfor %}
        <div class="form-group-b">
            <div class="col-sm-offset-2 col-sm-10-a">
                <button type="submit" class="btn btn-default">Alterar</button>
            </div>
        </div>
    </form>
{% endblock %}