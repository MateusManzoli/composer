{% extends "base.html.twig" %}
{% block body %}
    <form method="post" action="../pedidoProduto/listagem_pedidoProduto.php">
        <input type="hidden" name="cancelar" value="1"/>
        <input type="hidden" name="pedido_id" value="{{pedido.id}}"/>
        <table class="table table-bordered">
            <tr style="text-align: center; font-family: monospace; font-size: 20px; color: black;">
                <td>Pedido</td>
                <td>PedidoProduto</td>
                <td>Produto</td>
                <td>Adquiridos</td>
                <td>Preco</td>
                <td>Status</td>
                <td colspan="2">gerenciar</td>
            </tr>
            {% for pedido in pedidos %}    
                <tr style="text-align: center;">
                    <td>{{pedido.id}}</td>
                    <td>{{pedido.pedido_id}}</td>
                    <td>{{pedido.produto_id}}</td>
                    <td>{{pedido.quantidade}}</td>
                    <td>{{pedido.preco}}</td>
                    <td>{{pedido.status}}</td>

                    <td><a href="../cliente/editar_cliente.php?cliente_id={{pedido.id}}" class="btn btn-default navbar-btn">Editar</a></td>
                    <td><button name="id_compra" type="submit" class="btn btn-default navbar-btn  glyphicon glyphicon-remove" value="{{pedido.id}}">Cancelar</button></td>
                {% endfor %}
            </tr>
        </table>
    </form>
{% endblock %}