{% extends "base.html.twig" %}
{% block body %}
    <form class="form-horizontal-a" method="post" action="../pedidoProduto/cadastro.php">
        {{mensagem}}<br>
        <h3>Dados do Pedido</h3>
        <input type="hidden" name="cadastrar" value="1">
        <input type="hidden" name="pedido" value="1">
        <input type="hidden" name="pedido_id" value="{{pdCliente.id}}"
               
        {% for pdCliente in buscarPedidoCliente %}
            <div class="form-group-a">
                <label  class="col-sm-2 control-label">Pedido</label>
                <div class="col-sm-10-a">
                    <input name="pedido_id" type="text" class="form-control" maxlength="60" value="{{pdCliente.id}}" readonly>
                </div>
            </div> 
        {% endfor %} 
        <div class="form-group-a">
            <label  class="col-sm-2 control-label">Produto</label>
            <div class="col-sm-10-a">
                <select name="produto_id" id="status_id" >
                    {% for produto in buscarProdutos %}    
                        <option value="{{produto.id}}">{{produto.nome}}|{{produto.preco}}|{{produto.quantidade_estoque}}</option>
                    {% endfor %}  
                </select>
            </div>
        </div>
        <div class="form-group-a">
            <label  class="col-sm-2 control-label">Quantidade</label>
            <div class="col-sm-10-a">
                <input name="quantidade" type="text" class="form-control" maxlength="60" placeholder="Quantidade Solicitada">
            </div>
        </div>
        <div class="form-group-a">
            <label  class="col-sm-2 control-label">Pre√ßo</label>
            <div class="col-sm-10-a">
                <input name="preco" type="text" class="form-control" maxlength="60" placeholder="Preco do produto">
            </div>
        </div>


        <div class="form-group-b">
            <div class="col-sm-offset-2 col-sm-10-a">
                <button name="id_pedido" type="submit" class="btn btn-default" value="{{pdCliente.id}}">Finalizar Compra</button>
            </div>
        </div>
    </form>
{% endblock %}
