{% extends "base.html.twig" %}
{% block body %}
    <form class="form-horizontal-a" method="post" action="../produto/editar_produto.php">
        {{mensagem}}
        <input type="hidden" name="produto_id" value="{{ id_produto }}"/>
        <h3>Modificar Dados Produto</h3>
        <div class="form-group-a">
            <label  class="col-sm-2 control-label">estoque</label>
            <input name="estoque" type="text" class="form-control" maxlength="80" value="{{produto.quantidade_estoque}}" readonly/><br><br>
            <label  class="col-sm-2 control-label">Codigo</label> 
            <input name="codigo" type="text" class="form-control" maxlength="11" value="{{produto.codigo}}" /><br>
            <label  class="col-sm-2 control-label">Nome</label> 
            <input name="nome" type="text" class="form-control" maxlength="80" value="{{produto.nome}}" /><br>
            <label  class="col-sm-2 control-label">Preco</label> 
            <input name="preco" type="text" class="form-control" maxlength="80" value="{{produto.preco}}" /><br>
        </div>
        <div class="form-group-b">
            <div class="col-sm-offset-2 col-sm-10-a">
                <button type="submit" class="btn btn-default">Alterar</button>
            </div>
        </div>
    </form>
{% endblock %}