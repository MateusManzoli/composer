{% extends "base.html.twig" %}

{% block body %}

    <form class="form-horizontal-a" method="post" action="../pedido/cadastro.php">
        <input type="hidden" name="cadastrar" value="1">
        <h3>Dados do Pedido</h3>
        <div class="form-group-a">
            <label  class="col-sm-2 control-label">Cliente</label>
            <div class="col-sm-10-a">
                <select name="cliente_id" id="id_cliente" >
                    {% for cliente in clientes %}    
                    <option value="{{cliente.id}}">{{cliente.nome}}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="form-group-a">
            <label  class="col-sm-2 control-label">Status</label>
            <div class="col-sm-10-a">
                <select name="status" id="id_status" >
                    {% for status in status_pedido %}    
                    <option value="{{status.id}}">  {{status.nome}}</option>
                    {% endfor %}
                </select>
            </div>
        </div>


        <div class="form-group-b">
            <div class="col-sm-offset-2 col-sm-10-a">
                <button type="submit" class="btn btn-default">Cadastrar Pedido</button>
            </div>
        </div>
    </form>

{% endblock %}
