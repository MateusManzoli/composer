{% extends "base.html.twig" %}

{% block body %}

    <form class="form-horizontal-a" method="post" action="cadastrar-campeonato.php">
        <input type="hidden" name="campeonato" value="1">
        <h3>Dados do Pedido</h3>
        <div class="form-group-a">
            <label  class="col-sm-2 control-label">Cliente</label>
            <div class="col-sm-10-a">
                <input name="cliente_id" type="text" class="form-control" maxlength="60" placeholder="Cliente">
            </div>
        </div> 
        <div class="form-group-a">
            <label  class="col-sm-2 control-label">Codigo</label>
            <div class="col-sm-10-a">
                <input name="codigo" type="text" class="form-control" maxlength="11" placeholder="Codigo Produto">
            </div>
        </div>

        <div class="form-group-a">
            <label  class="col-sm-2 control-label">Status</label>
            <div class="col-sm-10-a">
                <select name="status" id="id_status" >
                    <optgroup label="Escolha o Estado">
                        <option value="criado">Criado</option>
                        <option value="cancelado">Cancelado</option>
                        <option value="finalizado">Finalizado</option>
                    </optgroup>
                </select>
            </div>
        </div>


        <div class="form-group-b">
            <div class="col-sm-offset-2 col-sm-10-a">
                <button type="submit" class="btn btn-default">Cadastrar Pedido</button>
            </div>
        </div>
    </form>

{% endblock %}
