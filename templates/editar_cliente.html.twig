{% extends "base.html.twig" %}
{% block body %}
    <form class="form-horizontal-a" method="post" action="../cliente/editar_cliente.php"> 
        <input type="hidden" name="id" value="{{cliente.id}}"/>
        <h3>Editar Dados Cliente</h3>
        <div class="form-group-a">
                <label  class="col-sm-2 control-label">Nome</label> 
                <input name="nome" type="text" class="form-control" maxlength="80" value="{{cliente.nome}}" /><br>
                <label  class="col-sm-2 control-label">Cpf</label> 
                <input name="cpf" type="text" class="form-control" maxlength="11" value="{{cliente.cpf}}" /><br>
                <label  class="col-sm-2 control-label">Email</label> 
                <input name="email" type="text" class="form-control" maxlength="80" value="{{cliente.email}}" /><br>
        </div>
        <div class="form-group-b">
            <div class="col-sm-offset-2 col-sm-10-a">
                <button type="submit" class="btn btn-default">Alterar</button>
            </div>
        </div>
    </form>
{% endblock %}