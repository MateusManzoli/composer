{% extends "base.html.twig" %}
{% block body %}
    <form class="form-horizontal-a" method="post" action="../produto/receberProdutos.php"> 
        <input type="hidden" name="produto_id" value="{{dadosProduto.id}}"/>
        <h3>Cadastrar novos produtos no estoque</h3>
        <div class="form-group-a">
            <label  class="col-sm-2 control-label">Codigo</label> 
            <input name="codigo" type="text" class="form-control" maxlength="11" value="{{dadosProduto.codigo}}" /><br>
            <label  class="col-sm-2 control-label">Nome</label> 
            <input name="nome" type="text" class="form-control" maxlength="80" value="{{dadosProduto.nome}}" /><br>
            <label  class="col-sm-2 control-label">Preco</label>
            <input name="preco" type="text" class="form-control" maxlength="80" value="{{dadosProduto.preco}}" /><br>
            <label  class="col-sm-2 control-label">estoque</label>
            <input name="quantidade" type="text" class="form-control" maxlength="80" value="{{dadosProduto.quantidade_estoque}}" readonly/> +
            <input name="produtosNovos" type="text" class="form-control" maxlength="80" placeholder="quantidade de produtos para adicionar no estoque"/><br>
        </div>
        <div class="form-group-b">
            <div class="col-sm-offset-2 col-sm-10-a">
                <button type="submit" class="btn btn-default">Cadastrar</button>
            </div>
        </div>
    </form>
{% endblock %}